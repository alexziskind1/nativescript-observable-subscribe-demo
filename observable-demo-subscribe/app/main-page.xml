<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <StackLayout>
    <Label text="Tap the button" cssClass="title"/>
    <Button text="TAP" tap="{{ tapAction }}" />
    <Label text="{{ message }}" cssClass="message" textWrap="true"/>
      
    <StackLayout orientation="horizontal" cssClass="switchwrapper">
        <Label text="Message Frozen" cssClass="switchlabel" />
        <Switch checked="{{ switchState }}" cssClass="switch" />
    </StackLayout>
      
  </StackLayout>
</Page>